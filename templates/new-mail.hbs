<h2>New Message</h2>

<form>
  <div class='form-group'>
    <label for='from-address'>From: </label>
    {{input type='text' id='from-address' value=from class='form-control'}}
  </div>

  <div class='form-group'>
    <label for='to-address'>To: </label>
    {{input type='text' id='to-address' value=to class='form-control'}}
  </div>

  <div class='form-group'>
    <label for='msg-subject'>Subject: </label>
    {{input type='text' id='msg-subject' value=subject class='form-control'}}
  </div>

  <div class='form-group'>
    <label for='msg-body'>Message: </label>
    {{textarea id='msg-body' value=body class='form-control' rows='5'}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>
    Send Message
  </button>
</form>
